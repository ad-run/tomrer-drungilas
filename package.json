  "dependencies": {
    "axios": "^1.8.1",
    "bootstrap": "^5.3.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5",
    "sass": "^1.85.1",
    "vite": "^6.2.1"
  }
